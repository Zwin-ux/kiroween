{
  "name": "haunted-debug-game",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev --webpack",
    "dev:turbo": "next dev --turbopack",
    "build": "npm run optimize:assets && next build",
    "build:skip-validation": "npm run optimize:assets && next build",
    "build:fast": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=Integration",
    "test:encounter": "jest --testPathPattern=EncounterWorkflow",
    "test:navigation": "jest --testPathPattern=NavigationProgression",
    "test:accessibility": "jest --testPathPattern=AccessibilityPerformance",
    "validate:assets": "node -r ts-node/register scripts/validate-assets.js",
    "validate:assets:report": "npm run validate:assets > asset-validation-report.txt",
    "optimize:assets": "node scripts/optimize-assets.js",
    "analyze:bundle": "ANALYZE=true npm run build:fast"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.3.1",
    "vm2": "^3.10.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "critters": "^0.0.24",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "image-webpack-loader": "^8.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.1"
  }
}
